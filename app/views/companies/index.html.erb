<div id="content" class="container_12">


  <div id="category" class="grid_12">


    <div class="clear"></div>

    <div class="s_listing s_list_view clearfix">

      <%@companies.each do |company|%>

          <div class="s_item grid_6 company_item" style="opacity: 1; ">
            <div class="grid_3 alpha">
              <%=link_to company do%>
                  <%=image_tag company.image_url, :width => 187, :height => 100%>
              <%end%>
            </div>

            <div class="grid_3 omega company_item_inner">
              <h3>
                <%=link_to company.name, company%>
              </h3>
              <p class="s_model">
              
                <% if company.addresses %>
                  <% company.addresses.each do |ad| %>
                    <%= ad.city %>
                  <%end%>
                <%end%>
                
              </p>
              <p class="s_description">

              </p>
            </div>
          </div>



      <%end%>
    </div>

    <div class="pagination">
      <div class="results">
        <%=will_paginate @companies%>
      </div>
    </div>

  </div>


</div>