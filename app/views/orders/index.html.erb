<h1>Listing orders</h1>

<table>
  <tr>
    <th>User</th>
    <th>Number</th>
    <th>Item qtd</th>
    <th>Total</th>
    <th>Instructions</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.user_id %></td>
    <td><%= order.number %></td>
    <td><%= order.item_qtd %></td>
    <td><%= order.total %></td>
    <td><%= order.instructions %></td>
    <td><%= order.status %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

