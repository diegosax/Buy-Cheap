<%= form_for(customer) do |f| %>
    <% if customer.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

          <ul>
            <% customer.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="s_row_2 clearfix">
      <label>
        <strong>
          <%= f.label :name %>
        </strong>
      </label>
      <%= f.text_field :name %>
    </div>
    <div class="s_row_2 clearfix">
      <label>
        <strong>
          <%= f.label "CPF" %>
        </strong>
      </label>
      <%= f.text_field :document %>
    </div>
    <div class="s_row_2 clearfix">
      <label>
        <strong>
          <%= f.label "Telefone" %>
        </strong>
      </label>
      <%= f.text_field :telephone %>
    </div>
    <div class="s_row_2 clearfix">
      <label>
        <strong>
          <%= f.label "Celular" %>
        </strong>
      </label>
      <%= f.text_field :celphone %>
    </div>
    <div class="s_row_2 clearfix">
      <label>
        <strong>
          <%= f.label "Data de Nascimento" %>
        </strong>
      </label>
      <%= f.text_field :birthdate %>
    </div>

    <div class="s_row_2 clearfix">
      <label>
        <strong>
          <%= f.label "Sexo" %>
        </strong>
      </label>
      <%= f.select :sex, ["Masculino","Feminino"] %>
    </div>
    <h3 class="s_secondary_color s_box">Endere√ßo</h3>
      <% f.fields_for :addresses do |builder| %>

          <%=render "users/address", :builder => builder%>

      <% end %>
    <div class="s_row_2 clearfix">
      <label>
        <strong>
          <%= f.label :email %>
        </strong>
      </label>
      <%= f.text_field :email %>
    </div>
    <div class="s_row_2 clearfix">
      <label>
        <strong>
          <%= f.label :password %>
        </strong>
      </label>
      <%= f.password_field :password %>
    </div>
    <div class="s_row_2 clearfix">
      <label>
        <strong>
          <%= f.label :password_confirmation %>
        </strong>
      </label>
      <%= f.password_field :password_confirmation %>
    </div>

    <span class="s_button_1 s_main_color_bgr">
             <%=f.submit "Cadastrar", :class => "button_like_link"%>
          </span>
<% end %>
