<div id="content" class="container_16">

  <div id="login_page" class="grid_16">

    <div class="grid_8 alpha">
      <h2 class="s_title_1"><span class="s_secondary_color">Não possuo</span> cadastro.</h2>
      <div class="clear"></div>
      <%=form_tag "/customers" do |f|%>
          <div class="s_row_3 clearfix">
            <p>Ao criar uma conta você será capaz de manter um controle sobre seus pedidos, seus cupons e
              promoções especiais</p>
            <br /> <br /><br /><br /><br />
            <label><strong>Digite seu cep:</strong></label>
            <%=text_field_tag "zipcode", "",:size => 35, :class => "required", :id=> "cep_load"%>
            <span id="cep_load_info"></span>
            <button class="s_button_1 s_main_color_bgr" type="submit"><span class="s_text">Iniciar Cadastro</span></button>

          </div>

          <span class="clear border_ddd"></span>
      <%end%>
    </div>

    <div class="grid_8 omega">
      <h2 class="s_title_1"><span class="s_secondary_color">Já possuo</span> cadastro</h2>

      <div class="clear"></div>
      <%= form_for("user", :url => sessions_path,:id => "login") do |g| %>
          <div class="s_row_3 clearfix">
            Efetue seu login abaixo<br>
            <br>
            <label><strong>Digite seu email:</strong></label>
            <%= g.text_field :email, :size => 35, :class => "required email" %>
            <br>
            <br>
            <label><strong>Senha:</strong></label>
            <%= g.password_field :password,:size => 35, :class => "required" %>
            <br>
          </div>
          <div class="s_nav s_size_2 left">
            <ul class="clearfix">
              <li><a href="#">Esqueci minha senha</a></li>
            </ul>
          </div>
          <span class="s_button_1 s_main_color_bgr">
            <%= g.submit 'Login', :class => "button_like_link" %>
          </span>
          <span class="clear border_ddd"></span>

      <%end%>
    </div>

    <div class="clear"></div>

  </div>
  <div id="registration" class="container_16">


    <div class="grid_16">

        <h2 class="s_title_1"><span class="s_secondary_color">Meu</span> Cadastro</h2>
        <div class="clear"></div>
        <% customer = Customer.new
           customer.addresses.build
        %>

        <%=render "customers/form",:customer => customer%>
    </div>
  </div>
</div>
