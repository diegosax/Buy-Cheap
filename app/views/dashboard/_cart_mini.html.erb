<div class="s_submenu s_cart_holder">
  <%cart = current_cart%>
  <%cart.line_items.each do |line_item| %>
      <div class="s_cart_item">
        <span class="block"><%=line_item.quantity%>x
          <%=link_to line_item.product.name, line_item.product%>
        </span>
      </div>
  <%end%>

  <span class="clear s_mb_15 border_eee"></span>
  <div class="s_total clearfix"><strong class="cart_module_total left">Total:</strong><span class="cart_module_total"><%=valor_formatado cart.total_price%></span></div>
  <span class="clear s_mb_15"></span>
  <div class="align_center clearfix">
    <%=link_to cart, :class => "s_button_1 s_secondary_color_bgr s_ml_0" do %>
        <span class="s_text">
            Ver Carrinho
        </span>
    <%end%>
    <%if cart.line_items.size > 0%>
        <%=link_to new_order_path, :class => "s_button_1 s_secondary_color_bgr" do%>
            <span class="s_text">
                Checkout
            </span>
        <%end%>
    <%end%>
  </div>
</div>