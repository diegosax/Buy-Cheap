<h1>Listing addresses</h1>

<table>
  <tr>
    <th>User</th>
    <th>Address</th>
    <th>Complement</th>
    <th>City</th>
    <th>State</th>
    <th>Zipcode</th>
    <th>Phone</th>
    <th>Cel phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.user_id %></td>
    <td><%= address.address %></td>
    <td><%= address.complement %></td>
    <td><%= address.city_id %></td>
    <td><%= address.state_id %></td>
    <td><%= address.zipcode %></td>
    <td><%= address.phone %></td>
    <td><%= address.cel_phone %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

