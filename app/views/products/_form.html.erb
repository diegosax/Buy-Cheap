<div id="content" class="container_16">

  <div class="grid_16">

    <%= form_for(@product,:html => { :multipart => true })  do |f| %>
        <% if @product.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

              <ul>
                <% @product.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <h2 class="s_title_1"><span class="s_secondary_color">Cadastro</span> de Empresa</h2>
        <div class="clear"></div>

        <div class="s_row_2 clearfix">
            <label class="required">
              <strong>
                Nome do produto
              </strong>
            </label>
            <%= f.text_field :name %>
          </div>

        <div class="s_row_2 clearfix">
            <label class="required">
              <strong>
                Breve descrição
              </strong>
            </label>
            <%= f.text_field :short_description %>
          </div>

        <div class="s_row_2 clearfix">
          <label><strong>Descrição completa</strong></label>
          <%=f.text_area :description, :cols => 10, :rows => 87%>
        </div>

        <div class="s_row_2 clearfix">
            <label class="required">
              <strong>
                Nome fantasia
              </strong>
            </label>
            <%= f.text_field :name %>
          </div>


        <div class="field">
          <%= f.label :description %><br />
          <%= f.text_area :description %>
        </div>
        <div class="field">
          <%= f.label :detail %><br />
          <%= f.text_area :detail %>
        </div>

        <div class="field">
          <%= f.label :original_price %><br />
          <%= f.text_field :original_price %>
        </div>
        <div class="field">
          <%= f.label :price %><br />
          <%= f.text_field :price %>
        </div>
        <div class="field">
          <%= f.label :stock %><br />
          <%= f.text_field :stock %>
        </div>
        <div class="field">
          <%= f.label :delyverable %><br />
          <%= f.check_box :delyverable %>
        </div>
        <br/>
        <div class="field">
          <%= f.file_field :image %>
        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
    <% end %>
